<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.Pane?>
<Pane xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.group4_icms.Functions.VC.Controller.ProviderController" prefWidth="1440.0" prefHeight="1024.0">
    <VBox prefHeight="1024.0" prefWidth="1140.0" spacing="10" stylesheets="@../css/home.css" AnchorPane.leftAnchor="0.0">
        <TextField fx:id="filterField" promptText="Enter search term..." prefWidth="1000.0" stylesheets="@../css/table.css"/>
        <TableView fx:id="tableView" prefWidth="1140" prefHeight="550" stylesheets="@../css/table.css">
            <columns>
                <TableColumn text="Provider ID" fx:id="colPId" prefWidth="100"/>
                <TableColumn text="Full Name" fx:id="colFullName" prefWidth="150"/>
                <TableColumn text="Phone Number" fx:id="colPhoneNumber" prefWidth="150"/>
                <TableColumn text="Email" fx:id="colEmail" prefWidth="150"/>
                <TableColumn text="Address" fx:id="colAddress" prefWidth="150"/>
                <TableColumn text="Role" fx:id="colRole" prefWidth="100"/>
                <TableColumn text="Delete" fx:id="colDelete" prefWidth="80"/>
            </columns>
        </TableView>
        <StackPane fx:id="contentArea" VBox.vgrow="ALWAYS">
            <!-- Additional content can be added here -->
        </StackPane>
    </VBox>
</Pane>
